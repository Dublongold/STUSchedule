<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="3dp">
    <item>
        <shape android:shape="oval"
            android:useLevel="false">
            <stroke android:width="2dp" android:color="@color/selected_theme"/>
            <size android:width="18dp" android:height="18dp"/>
        </shape>
    </item>
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        >
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/selected_theme" />
        </shape>
    </item>
</layer-list>