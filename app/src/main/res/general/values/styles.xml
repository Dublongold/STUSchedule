    <style name="App.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">?appTextColor</item>
    </style>

    <style name="App.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColorPrimary">?appTextColor</item>
        <item name="android:windowBackground">?appBackground</item>
        <item name="buttonBarNegativeButtonStyle">@style/App.Dialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/App.Dialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/App.Dialog.Button</item>
    </style>
    <style name="App.Dialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?appTextColor</item>
    </style>
    <style name="App.AppCompatButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?appPrimaryColor</item>
        <item name="android:textColor">?appTextColor</item>
    </style>


    <style name="App.Popup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">?appBackground</item>
        <item name="android:backgroundTint">?appBackground</item>
        <item name="android:textColor">?appTextColor</item>
    </style>

    <style name="App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?appTextColor</item>
        <item name="android:textColorHint">?appTextColorHint</item>
        <item name="android:backgroundTint">?appTextColor</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="App.ScrollView" parent="">
        <item name="android:scrollbarThumbVertical">?attr/appScrollViewThumbColor</item>
        <item name="android:overScrollMode">never</item>

        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">?appTextColor</item>
    </style>

    <style name="App.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?appTextColor</item>
    </style>
    <style name="App.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">?appTextColor</item>
    </style>
</resources>