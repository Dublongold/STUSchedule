<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loadingFragment">

    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.helpful.stuSchedule.views.loading.LoadingFragment"
        android:label="LoadingFragment"
        tools:layout="@layout/fragment_loading">
        <action
            android:id="@+id/toWelcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popEnterAnim="@animator/fade_in"
            app:exitAnim="@animator/fade_out"
            app:popUpToInclusive="true"
            app:popUpTo="@id/loadingFragment"/>
        <action
            android:id="@+id/fromLoadingFragmentToSelectWeekdayFragment"
            app:destination="@id/selectWeekdayFragment"
            app:popEnterAnim="@animator/fade_in"
            app:exitAnim="@animator/fade_out"
            app:popUpTo="@id/loadingFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/fromLoadingFragmentToDataChangedFragment"
            app:destination="@id/dataChangedFragment"
            app:popEnterAnim="@animator/fade_in"
            app:exitAnim="@animator/fade_out"
            app:popUpTo="@id/loadingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.helpful.stuSchedule.views.schedule.ScheduleFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/fragment_schedule" />
    <fragment
        android:id="@+id/selectWeekdayFragment"
        android:name="com.helpful.stuSchedule.views.selectWeekday.SelectWeekdayFragment"
        android:label="SelectWeekdayFragment"
        tools:layout="@layout/fragment_select_weekday">
        <action
            android:id="@+id/fromSelectWeekdayFragmentToScheduleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/fromSelectWeekdayFragmentToWantChangeGroupFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:destination="@id/wantChangeFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.welcome.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/fromWelcomeFragmentToStructureFragment"
            app:destination="@id/structureFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/structureFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.structure.StructureFragment"
        android:label="StructureFragment"
        tools:layout="@layout/fragment_collecting_data">
        <action
            android:id="@+id/fromStructureFragmentToFacultyFragment"
            app:destination="@id/facultyFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/facultyFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.faculty.FacultyFragment"
        android:label="FacultyFragment"
        tools:layout="@layout/fragment_collecting_data">
        <action
            android:id="@+id/fromFacultyFragmentToCourseFragment"
            app:destination="@id/courseFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/confirmDataFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.confirmData.ConfirmDataFragment"
        android:label="ConfirmDataFragment"
        tools:layout="@layout/fragment_confirm_data">
        <action
            android:id="@+id/fromConfirmDataFragmentAfterWantChangeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/selectWeekdayFragment"
            app:popUpToInclusive="true"
            app:destination="@id/selectWeekdayFragment"/>
        <action
            android:id="@+id/fromConfirmDataFragmentAfterDataChangedFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/dataChangedFragment"
            app:popUpToInclusive="true"
            app:destination="@id/selectWeekdayFragment"/>
        <action
            android:id="@+id/fromConfirmDataFragmentAfterWelcomeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true"
            app:destination="@id/selectWeekdayFragment" />
    </fragment>

    <fragment
        android:id="@+id/courseFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.course.CourseFragment"
        android:label="CourseFragment"
        tools:layout="@layout/fragment_collecting_data">
        <action
            android:id="@+id/fromCourseFragmentToGroupFragment"
            app:destination="@id/groupFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.group.GroupFragment"
        android:label="GroupFragment"
        tools:layout="@layout/fragment_collecting_data">
        <action
            android:id="@+id/fromGroupFragmentToConfirmDataFragment"
            app:destination="@id/confirmDataFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/dataChangedFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.dataChanged.DataChangedFragment"
        android:label="DataChangedFragment"
        tools:layout="@layout/fragment_data_changed">
        <action
            android:id="@+id/fromDataChangedFragmentToStructureFragment"
            app:destination="@id/structureFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/wantChangeFragment"
        android:name="com.helpful.stuSchedule.views.receivingData.wantChangeGroup.WantChangeFragment"
        android:label="WantChangeFragment"
        tools:layout="@layout/fragment_want_change_group">
        <action
            android:id="@+id/fromWantChangeFragmentToStructureFragment"
            app:destination="@id/structureFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
</navigation>