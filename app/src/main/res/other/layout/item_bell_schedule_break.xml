<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/break_between_lessons"
    android:background="@drawable/lesson_background"
    android:layout_gravity="center_horizontal"
    android:layout_width="320dp"
    android:layout_height="35dp">
    <TextView
        android:id="@+id/bellScheduleItemNumber"
        android:layout_width="46dp"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:text="1/2"
        app:drawableEndCompat="@drawable/entity_border" />
    <TextView
        android:id="@+id/studentFullName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="Перерва: 10123 хв."/>
</androidx.appcompat.widget.LinearLayoutCompat>